<%- include ("partials/header.ejs") %>

<header class="header">
    <div class="header-content">
        <h1 class="heading">
            <span class="small"> welcome to the world of</span>
            blog
            <span class="no-fill">writing</span>
        </h1>
        <a href="/form" class="button">write a blog</a>
    </div>
</header>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<section class="blog-section">


<% if(locals.blogData&&blogData.length!=0){%>

<% blogData.forEach(blog => { %>
    <div class="blog-card">
        <h2 class="blog-title"><%= blog.title %></h2>
        <span class="blog-date"><%= blog.date %></span> 
        <p class="blog-preview"> <%= blog.message.substring(0,100) %>...</p>
        <div class="read-link">       
            <a href="blog/<%= blog.id %>" class="button-read">Read more</a>
        </div>        
    </div>
<% }); %>
<%} else {%>
    <h1> Oops! it is empty</h1>
<%} %>
</section>

<%- include ("partials/footer.ejs") %>