<%- include ("partials/header.ejs") %>

<body class="form-body">
    <form class="blog-form" action="/submit" method="post">
    <label for="title">Blog title:</label>
    <input type="text" id="title" name="title" size="100"><br>
    <label for="content">Content:</label>
    <textarea class="textarea"name="message" rows="10" cols="100" placeholder="Add the content of your blog here"></textarea><br>
    <label> Upload image:</label>
    <input 
            type="file" 
            id="photo" 
            name="photo" 
            accept="image/*"> 
    <br>  
    <input type="submit" value="Submit">
    </form>
</body>

